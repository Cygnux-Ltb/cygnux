<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<!-- This is parent redstone pom.xml -->
	<groupId>io.mercury</groupId>
	<artifactId>redstone</artifactId>
	<version>0.1</version>

	<packaging>pom</packaging>
	<name>redstone</name>

	<url>https://github.com/yellow013/redstone.git</url>

	<modules>
		<!-- adaptor modules -->
		<module>adaptor-ftdc</module>
		<module>adaptor-ib</module>
		<!-- financial -->
		<module>financial</module>
		<!-- indicator -->
		<module>indicator</module>
		<!-- core api -->
		<module>redstone-core</module>
		<!-- execution engine -->
		<module>redstone-engine</module>
		<!-- implement example -->
		<module>redstone-example</module>
		<!-- exchange simulator -->
		<module>redstone-simulator</module>
		<module>redstone-runtime</module>
	</modules>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.version>1.8</java.version>
		<commons.version>1.0-SNAPSHOT</commons.version>
		<transport.version>1.0-SNAPSHOT</transport.version>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.1</version>
				<configuration>
					<compilerArgument>-parameters</compilerArgument>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>
		<!-- commons -->
		<!-- see https://github.com/yellow013/commons.git -->
		<dependency>
			<groupId>io.mercury</groupId>
			<artifactId>commons-core</artifactId>
			<version>${commons.version}</version>
		</dependency>
	</dependencies>

	<dependencyManagement>
		<dependencies>
			<!-- commons -->
			<!-- see https://github.com/yellow013/commons.git -->
			<dependency>
				<groupId>io.mercury</groupId>
				<artifactId>commons-concurrent</artifactId>
				<version>${commons.version}</version>
			</dependency>
			<!-- commons -->
			<!-- see https://github.com/yellow013/transport.git -->
			<dependency>
				<groupId>io.mercury</groupId>
				<artifactId>transport-core</artifactId>
				<version>${transport.version}</version>
			</dependency>
			<dependency>
				<groupId>io.mercury</groupId>
				<artifactId>transport-rabbitmq</artifactId>
				<version>${transport.version}</version>
			</dependency>
			<dependency>
				<groupId>io.mercury</groupId>
				<artifactId>transport-socket</artifactId>
				<version>${transport.version}</version>
			</dependency>
			<!-- redstone -->
			<dependency>
				<groupId>io.mercury</groupId>
				<artifactId>financial</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>io.mercury</groupId>
				<artifactId>redstone-core</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>io.mercury</groupId>
				<artifactId>redstone-engine</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>io.mercury</groupId>
				<artifactId>redstone-runtime</artifactId>
				<version>${project.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

</project>